@model PAW3.Web.Models.ViewModels.FoodBankViewModel

@{
    ViewData["Title"] = "Add new item";
}

<div class="content-card">
    <div class="page-header">
        <h1><i class="fas fa-plus-circle text-primary-custom me-2"></i>Create Food Item</h1>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-md-8 col-lg-6">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <input asp-for="FoodItemId" type="hidden" />

                <div class="form-group">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Product name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Brand" class="form-label"></label>
                    <input asp-for="Brand" class="form-control" placeholder="Brand" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3" placeholder="Description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Category" class="form-label"></label>
                            <input asp-for="Category" class="form-control" placeholder="Category" />
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" type="number" step="0.10" min="0" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Unit" class="form-label"></label>
                            <input asp-for="Unit" class="form-control" placeholder="e.g. kg/unit/pack" />
                            <span asp-validation-for="Unit" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="QuantityInStock" class="form-label"></label>
                            <input asp-for="QuantityInStock" class="form-control" type="number" min="0" placeholder="Quantity" />
                            <span asp-validation-for="QuantityInStock" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ExpirationDate" class="form-label"></label>
                            <input asp-for="ExpirationDate" class="form-control" type="date" />
                            <span asp-validation-for="ExpirationDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group d-flex align-items-center">
                            <div class="form-check me-3">
                                <input asp-for="IsPerishable" class="form-check-input" type="checkbox" />
                                <label asp-for="IsPerishable" class="form-check-label"></label>
                            </div>
                            <div class="form-group ms-2">
                                <label asp-for="CaloriesPerServing" class="form-label"></label>
                                <input asp-for="CaloriesPerServing" class="form-control" type="number" min="0" placeholder="Calories" />
                                <span asp-validation-for="CaloriesPerServing" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="Ingredients" class="form-label"></label>
                    <textarea asp-for="Ingredients" class="form-control" rows="2" placeholder="Ingredients"></textarea>
                    <span asp-validation-for="Ingredients" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Barcode" class="form-label"></label>
                            <input asp-for="Barcode" class="form-control" placeholder="Barcode / UPC" />
                            <span asp-validation-for="Barcode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Supplier" class="form-label"></label>
                            <input asp-for="Supplier" class="form-control" placeholder="Supplier name" />
                            <span asp-validation-for="Supplier" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group form-check mt-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label"></label>
                </div>

                <input asp-for="RoleId" type="hidden" />

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary me-2">
                        <i class="fas fa-save me-2"></i>Create Item
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}